/* pages/login0/login0.wxss */
.profile{
  background: #a54847;
  height:400rpx;
  text-align: center; /*子元素居中*/
  position: relative; /*相对定位*/
  width:100%;
}
/*2:子元素绝对定位圆角50%*/
.profile-img{
  position: absolute;/*绝对定位*/
  width:200rpx;      /*宽高*/
  height:200rpx;
  display: block;
  overflow: hidden;  /*溢出隐藏*/
  border-radius: 50%;/*圆角*/
  left:50%;
  transform: translate(-50%,60rpx);
}